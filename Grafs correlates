###Grafs
#235
dados=read.table(pipe("pbpaste"), sep="\t", header=T);dados
x=c(1,2)
avg=dados$media
lower=dados$II
upper=dados$IS
par(mar=c(5,10,1,1))
plot(1, type="n", axt="n", yaxt="n", ylab="", xlim=c(-1, 1), ylim=c(0, 3),xlab="Correlação")
points(avg,x, pch=16,cex=1.5)
arrows(lower, x, upper,x, length=0.05, angle=90, code=3,lwd=2.5,lty=1,rm.na=T)
abline(v=0,lty=2, lwd=2)
axis(side=2,at=x,label=c("Didelphis albiventris", "Dasypus novemcinctus"),cex.lab=14, las=1)

